<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Receipt"
    android:padding="5dp"
    android:background="@drawable/receipt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#CCC6C6"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Zoo"
                android:fontFamily="@font/babypanda"
                android:textSize="45dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="App"
                android:textColor="#E12525"
                android:fontFamily="@font/babypanda"
                android:textSize="45dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animals in total --->"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/anitotal"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginStart="150dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="---------------------------------------------------------------------------------------------" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Vegetable price --->"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="17dp"
                android:id="@+id/vegtotal"
                android:textColor="#000000"
                android:layout_marginStart="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Meat price --->"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="17dp"
                android:id="@+id/meattotal"
                android:textColor="#000000"
                android:layout_marginStart="140dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="--------------------------------------------------------------------"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total food cost --->"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textSize="17dp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/pricetotal"
                android:textColor="#000000"
                android:layout_marginStart="150dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="THANK YOU"
            android:textSize="17dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:textColor="#000000"/>


    </LinearLayout>

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Receipt"
        android:id="@+id/receiptfinal"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#DADCDF"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"/>



</LinearLayout>